<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Administration console</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script type="text/javascript">
      function gripperMove(value){
        $.post( "panTilt/gripper", function( data ) {
          alert(data);
        });
      }

      function panMove(value){
        $.post( "panTilt/pan", function( data ) {
          alert(data);
        });
      }

      function tiltMove(value){
        $.post( "panTilt/tilt", function( data ) {
          alert(data);
        });
      }
    </script>

  </head>
  <body>
    <h1>Administration console</h1>

    <div class="row">
      <div class="col-md-4">.
        <h3>Gripper</h3>
        <button type="button" class="btn btn-primary btn-lg btn-block" onclick="gripperMove(1);">+</button>
        <input type="text" class="form-control" id="gripperValue">
        <button type="button" class="btn btn-primary btn-lg btn-block" onclick="gripperMove(-1);">-</button>
      </div>
      <div class="col-md-4">
        <h3>Pan</h3>
        <button type="button" class="btn btn-primary btn-lg btn-block" onclick="panMove(1);">+</button>
        <input type="text" class="form-control" id="panValue">
        <button type="button" class="btn btn-primary btn-lg btn-block" onclick="panMove(-1);">-</button>
      </div>
      <div class="col-md-4">
        <h3>Tilt</h3>
        <button type="button" class="btn btn-primary btn-lg btn-block" onclick="tiltMove(1);" >+</button>
        <input type="text" class="form-control" id="TiltValue">
        <button type="button" class="btn btn-primary btn-lg btn-block" onclick="tiltMove(-1);">-</button>
      </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <!-- Include all compiled plugins (below), or include individual files as needed -->
  </body>
</html>
